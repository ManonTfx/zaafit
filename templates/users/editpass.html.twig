{% extends 'users.html.twig' %}

{% block title %}Modification du mot de passe{% endblock %}

{% block content %}


<div class="bg-light formupdatepass">
    {% for message in app.flashes('error') %}
        <div class="col-sm-10">
            <div>{{message}}</div>
        </div>
    {% endfor %}
    <div class="passpictureform">
    <img class="passundrawform" src="{{ asset('img/pass.svg') }}" alt="mot-de-passe-img">
    <h1 class="h2">Modification du mot de passe</h1>
    </div>
    <form method="post">
            <label class="displaylabel"for="pass" class="col-sm-2 col-form-label">Veuillez saisir votre nouveau mot de passe</label>    
            <input  type="password" class="form-control" id="pass" name="pass" >
            <label class="displaylabel" for="pass2" class="col-sm-2 col-form-label">Veuillez confirmer le nouveau mot de passe</label>
            <input type="password" class="form-control" id="pass2" name="pass2">
        <button type="submit" class="btn btn-login mb-2 mt-1">Valider</button>
    </form>
</div>

{% endblock %}