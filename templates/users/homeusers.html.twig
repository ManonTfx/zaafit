{% extends 'users.html.twig' %}

{% block title %}Home - {{ app.user.prenom }} {{ app.user.nom }}{% endblock %}

{% block content %}
<div class="grid-container">
    <nav class="navmenuburger">
        <a href="{{ path('poids')}}" class="btnWeight btn">+&nbsp;&nbsp;Ajouter poids</a>
        <div class=" menuburger">
            <div class="d-flex align-items-center">
                {% if app.request.get('_route') == 'users' %}
                <a href="{{ path('users') }}" class="nav-link">
                        <img class="icons"src="{{ asset('img/iconhomeblue.svg') }}" alt="">
                Home
                </a>
                {% else %}
                <a class="nav-link" href="{{ path('users')}}">
                    <img class="icons"src="{{ asset('img/iconhome.svg') }}" alt="">
                Home
                </a>
                {% endif %}
            </div>

            <div class="d-flex align-items-center">
                {% if app.request.get('_route') == 'food_user' %}
                <a class="nav-link" href="{{ path('food_user')}}">
                    <img class="icons"src="{{ asset('img/iconrepasblue.svg') }}" alt="">
                Repas
                </a>
                {% else %}
                <a class="nav-link" href="{{ path('food_user')}}">
                    <img class="icons"src="{{ asset('img/iconrepas.svg') }}" alt="">
                Repas
                </a>
                {% endif %}

            </div>

            <div class="d-flex align-items-center">
                {% if app.request.get('_route') == 'sport' %}
                <a class="nav-link" href="{{ path('sport')}}">
                    <img class="icons"src="{{ asset('img/iconactivitesblue.svg') }}" alt="">
                Exercices
                </a>
                {% else %}
                <a class="nav-link" href="{{ path('sport')}}">
                    <img class="icons"src="{{ asset('img/iconactivites.svg') }}" alt="">
                Exercices
                </a>
                {% endif %}
            </div>


            <div class="d-flex align-items-center">
                <a class="nav-link" href="{{ path('blog')}}">
                    <img class="icons"src="{{ asset('img/blogzaafiticon.svg') }}" alt="">
                Blog
                </a>
            </div>
        </div>
    </nav>
    <div class="homestatsupleft homestatsup">
        <p class = "datejour"> {{ dateJour|format_datetime('full', 'none' , locale='fr') |capitalize}}</p>
        <p class = "heure"> {{ heure |format_datetime('none', 'short', locale='fr')}}</p>
    </div>
    <div class="homestatsupmiddle homestatsup d-flex  align-items-center justify-content-around">
        <img class="iconsKg"src="{{ asset('img/imc.svg') }}" alt="">               
        <div class="imcdiv">
            <p>IMC ACTUEL</p>
            <p class = "imc"> {{ imc|round(1, 'floor') }} - {{ resultimc }}</p>
        </div>
    </div>
    <div class="homestatsupmiddleright d-flex  align-items-center justify-content-around homestatsup">
        <img class="iconsKg"src="{{ asset('img/calories-icon.svg') }}" alt="">
        <div class="imcdiv">
            <p>Calories brûlés</p>
            <p class = "imc"> {{caloriesTotal}} </p>
        </div>             
    </div>
    <div class="homestatsupright homestatsup">
        <canvas height ="85" id="myChart"></canvas>
    </div>
    <section class="homestats">
        <div id="div_chart" class="weightChart"> 
            <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
            <script type="text/javascript">
                {{ gc_draw(chart, 'div_chart') }}
            </script>
        </div>
    </section>
    <div class="homestatsbottom mt-5">
        <h2 class="text-center mt-2">Dernier Repas enregistré </h2>
        <table class="table table-bordered mt-3">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Petit Déjeuner</th>
                    <th scope="col">Déjeuner</th>
                    <th scope="col">Encas</th>
                    <th scope="col">Diner</th>
                    <th scope="col">Note de la journée</th>
                </tr>
            </thead>

            <tbody>
                {% for food in dernierRepas %}
                <tr>
                    <th scope="row">{{ food.date_jour_repas| date('d/m/Y') }}</th>
                    <td>{{ food.petit_dejeuner }}</td>
                    <td>{{ food.dejeuner }}</td>
                    <td>{{ food.encas }}</td>
                    <td>{{ food.diner }}</td>
                    <td>{{ food.note_journee }}</td>
                    <td>
                        <a href="{{ path('app_food_delete', {'id': food.id}) }}"  onclick="return confirm('Etes-vous sure de vouloir supprimer ces repas?')">
                            Supprimer
                        </a>
                    </td>
                    <td>   
                        <a href="{{ path('app_food_update', {'id': food.id}) }}">
                            Éditer
                        </a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
<footer>


<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js"></script>
<script>
    var value = {{ percent }};
var data = {
  datasets: [
    {
      data: [value, 100-value],
      backgroundColor: [
        "#FD5181",
        "#E4E8EB"
      ],
      hoverBackgroundColor: [
        "#FF6384",
        "#AAAAAA"
      ],
      hoverBorderColor: [
        "#FF6384",
        "#ffffff"
      ]
    }]
};

var myChart = new Chart(document.getElementById('myChart'), {
  type: 'doughnut',
  data: data,
  options: {
  	responsive: true,
    legend: {
      display: false
    },
    cutoutPercentage: 80,
    tooltips: {
    	filter: function(item, data) {
        var label = data.labels[item.index];
        if (label) return item;
      }
    }
  }
});

textCenter(value);

function textCenter(val) {
  Chart.pluginService.register({
    beforeDraw: function(chart) {
      var width = chart.chart.width,
          height = chart.chart.height,
          ctx = chart.chart.ctx;

      ctx.restore();
      var fontSize = (height / 114).toFixed(2);
      ctx.font = fontSize + "em sans-serif";
      ctx.textBaseline = "middle";

      var text = val+"%",
          textX = Math.round((width - ctx.measureText(text).width) / 2),
          textY = height / 2;

      ctx.fillText(text, textX, textY);
      ctx.save();
    }
  });
}
</script>
{% endblock %}