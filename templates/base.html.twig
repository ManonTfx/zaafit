<!DOCTYPE html>
<html>

    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Zaafit{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
            <link rel="shortcut icon" href="{{ asset('img/logoicon.svg') }}">
            <link rel="stylesheet" href="{{ asset('css/zaafit.css') }} ">
            <link rel="preconnect" href="https://fonts.gstatic.com">
            <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;1,100;1,300;1,400;1,700&display=swap" rel="stylesheet">
        {% endblock %}
    </head>

    {% block body %}
    <body>
    
    {% block header %}
     <header class= "headerhome">
        <a  href="{{path('home')}}"><img class="logo" src="{{ asset('img/zaafitlogo.webp') }}" alt="logo zafit"></a>
        <div>
            {% if app.user %}
            <button type="button" class="buttonregister">
            <a href="{{path('users')}}">Tableau de bord</a> </button>
            <button type="button" class="buttonlogin"><a href=" {{path('app_logout') }}">Deconnexion</a></button>
            {% else %} 
            <button type="button" class="buttonregister">
            <a href="{{path('app_register')}}">S'inscrire</a> </button>
            <button type="button" class="buttonlogin"><a href=" {{path('app_login') }}">Connexion</a></button>
            {% endif %}        
        </div>
    </header>
{% endblock %}


{% block content %}
{% endblock %}


            <div> © 2020 Copyright:
                <a class="text-dark" href="https://mdbootstrap.com/">zaafit.site</a>
            </div>
            <div>
            <a href="{{ path('blog')}}" class="footerlink text-dark">Blog</a>
            <a href="mailto:manon.trefoux@gmail.com" class="footerlink text-dark">Contact</a>
            <a href="{{ path('app_mentions_legales')}}" class="footerlink text-dark">Mentions légales</a>
            </div>
    </footer>
    </body>
{% endblock %}

        {% block javascripts %}
        <script src="{{ asset('js/zaafit.js') }}"></script>
        <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
            <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>            
        {% endblock %}
       

</html>