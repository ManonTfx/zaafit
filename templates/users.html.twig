        <meta charset="UTF-8">
        <meta name="description" content="Retrouve ton évolution jour après jour et garde une trace de tes progrès">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{% block title %}Zaafit{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
            <link rel="shortcut icon" href="{{ asset('img/logoicon.svg') }}">
            <link rel="stylesheet" href="{{ asset('css/cookies.css') }} ">
            <link rel="stylesheet" href="{{ asset('css/gridcontainer.css') }} ">
            <link rel="stylesheet" href="{{ asset('css/classjs.css') }} ">
            <link rel="stylesheet" href="{{ asset('css/zaafit.css') }} ">
            <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.4/Chart.min.css" integrity="sha512-/zs32ZEJh+/EO2N1b0PEdoA10JkdC3zJ8L5FTiQu82LR9S/rOQNfQN7U59U9BC12swNeRAz3HSzIL2vpp4fv3w==" crossorigin="anonymous" />
            <link rel="preconnect" href="https://fonts.gstatic.com">
            <link href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;1,100;1,300;1,400;1,700&display=swap" rel="stylesheet">
        {% endblock %}
    </head>

    <body>
    {% block header %}
          <header class="headerusers mb-3">
            <div class="d-flex align-items-center">
                <a href="{{path('users')}}"><img class="logo logousers" src="{{ asset('img/zaafitlogo.webp') }}" alt="logo-zaafit"></a>
                {% if app.request.get('_route') == 'users' %}
                 <div class="d-flex align-items-center">
                    <button class="menuburgerbtn"><img src="{{ asset('img/menuburger.svg') }}" alt="menuburger"></button>
                    <p class="masquemenu pt-2">Masquer le menu</p>
                    <p class="displayMenu pt-2">Afficher le menu</p>
                </div>
                {% elseif app.request.get('_route') == 'food_user' %}
                 <div class="d-flex align-items-center">
                    <button class="menuburgerbtn"><img src="{{ asset('img/menuburger.svg') }}" alt="menuburger"></button>
                    <p class="masquemenu pt-2">Masquer le menu</p>
                    <p class="displayMenu pt-2">Afficher le menu</p>
                </div>
                {% elseif app.request.get('_route') == 'sport' %}
                 <div class="d-flex align-items-center">
                    <button class="menuburgerbtn"><img src="{{ asset('img/menuburger.svg') }}" alt="menuburger"></button>
                    <p class="masquemenu pt-2">Masquer le menu</p>
                    <p class="displayMenu pt-2">Afficher le menu</p>
                </div>
                {% elseif app.request.get('_route') == 'app_food_update' %}
                 <div class="d-flex align-items-center">
                    <button class="menuburgerbtn"><img src="{{ asset('img/menuburger.svg') }}" alt="menuburger"></button>
                    <p class="masquemenu pt-2">Masquer le menu</p>
                    <p class="displayMenu pt-2">Afficher le menu</p>
                </div>
                {% elseif app.request.get('_route') == 'app_sport_update' %}
                 <div class="d-flex align-items-center">
                    <button class="menuburgerbtn"><img src="{{ asset('img/menuburger.svg') }}" alt="menuburger"></button>
                    <p class="masquemenu pt-2">Masquer le menu</p>
                    <p class="displayMenu pt-2">Afficher le menu</p>
                </div>
                {% elseif app.request.get('_route') == 'poids' %}
                 <div class="d-flex align-items-center">
                    <button class="menuburgerbtn"><img src="{{ asset('img/menuburger.svg') }}" alt="menuburger"></button>
                    <p class="masquemenu pt-2">Masquer le menu</p>
                    <p class="displayMenu pt-2">Afficher le menu</p>
                </div>
                {% else %}
                <div></div>
                {% endif %}
               
            </div>
            <div class="d-flex align-items-center">
                <div class="d-flex dropdown align-items-center ">
                    
                    <button class="dropdown-toggle profiluserbtn" type="button" id="deroulantb" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <img class="profilpicture" src="{{ asset('images/products/' ~ app.user.photo) }}" alt="photo_de_profil"> <span class="nomheaderdashboard">{{app.user.prenom}} {{app.user.nom}} </span></button>
                    <div class="dropdown-menu menuderoulant" aria-labelledby="deroulantb">
                        <a class="dropdown-item" href="{{ path('users_profile_edit')}}">Modifier mon profil</a>
                        <a class="dropdown-item" href="{{ path('users_pass_edit')}}">Modifier le mot de passe</a>
                        <a class="dropdown-item" href="{{ path('app_logout')}}">Déconnexion</a>
                    </div>
                </div>
            </div>
        </header>

        {% for message in app.flashes('message') %}
            <div class="col-sm-10">
                <div>{{message}}</div>
            </div>
        {% endfor %}


    {% endblock %}

    <main>
    {% block content %}
    {% endblock %}
    </main>

    <footer>
       <div> © 2020 Copyright:
            <a class="text-dark" href="https://zaafit.fr/">zaafit.fr</a>
        </div>
        <div>
            <a href="{{ path('blog')}}" class="footerlink text-dark">Blog</a>
            <a href="mailto:manon.trefoux@gmail.com" class="footerlink text-dark">Contact</a>
            <a href="{{ path('app_mentions_legales')}}" class="footerlink text-dark">Mentions légales</a>
            <a href="{{ path('app_pol_confidentialite')}}" class="footerlink text-dark">Politique de confidentialité</a>

        </div>
    </footer>
   

